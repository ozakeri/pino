<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:layout_marginBottom="1.5dp"
        android:layout_marginLeft="1.5dp"
        android:layout_marginRight="1.5dp"
        android:layout_marginTop="1.5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/btn_prev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:visibility="gone">
                <Button
                    android:id="@+id/img_prev"
                    android:background="@mipmap/arrow_right_driver"
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/currentDate_VT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:editable="false"
                android:textSize="12sp"
                android:text="0000000"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <com.gap.bis_inspection.util.CustomTextView
                    android:id="@+id/year_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Time"
                    android:textSize="15sp" />

                <com.gap.bis_inspection.util.CustomTextView
                    android:id="@+id/month_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Time"
                    android:textSize="15sp" />

                <com.gap.bis_inspection.util.CustomTextView
                    android:id="@+id/numberDate_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Time"
                    android:textSize="15sp" />

                <com.gap.bis_inspection.util.CustomTextView
                    android:id="@+id/textDate_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Time"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                >
                <Button
                    android:id="@+id/img_next"
                    android:background="@mipmap/arrow_left_driver"
                    android:layout_width="15dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progress"
                android:layout_marginBottom="30dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_next"
                android:layout_margin="1dp">
                <ViewFlipper
                    android:id="@+id/viewflipper"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"/>
            </com.github.mikephil.charting.charts.BarChart>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!--  <android.support.v7.widget.CardView
          android:id="@+id/card_top"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="7dp"
          android:layout_marginBottom="1.5dp"
          android:layout_marginLeft="1.5dp"
          android:layout_marginRight="1.5dp"
          android:layout_marginTop="1.5dp">

      </android.support.v7.widget.CardView>-->

</LinearLayout>



