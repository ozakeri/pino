<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.form.SurveyActivity">

    <RelativeLayout
        android:id="@+id/layoutToolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/toolbarCheckList">

        <ImageView
            android:id="@+id/img_driverIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="7dp"
            android:background="@mipmap/iconchecklist" />

        <com.gap.pino.util.CustomTextView
            android:id="@+id/code_VT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/img_driverIcon"
            android:text="@string/label_checkListQuestionActivity_Title"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/back_Icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/arrow_back" />
        </RelativeLayout>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutToolbar">



                <androidx.cardview.widget.CardView
                    android:id="@+id/layoutCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardCornerRadius="5dp"
                    android:layout_margin="3dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/linearLayout1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">


                            <com.gap.pino.util.CustomTextView
                                android:id="@+id/formName_TV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="********"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <com.gap.pino.util.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="نام فرم:"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearLayout1"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <com.gap.pino.util.CustomTextView
                                android:id="@+id/lineCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="********"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <com.gap.pino.util.CustomTextView
                                android:id="@+id/customTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="30dp"
                                android:text="کد خط :"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <com.gap.pino.util.CustomTextView
                                android:id="@+id/plateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="********"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <com.gap.pino.util.CustomTextView
                                android:id="@+id/txt_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="شماره پلاک اتوبوس :"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linearLayout3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linearLayout2"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">


                            <com.gap.pino.util.CustomTextView
                                android:id="@+id/dateAndTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="********"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <com.gap.pino.util.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="تاریخ و ساعت بازدید :"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </RelativeLayout>



                </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutCardView"
                    android:visibility="gone">

                    <com.gap.pino.util.CustomTextView
                        android:id="@+id/leftLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1.3"
                        android:gravity="center"
                        android:text="وضعیت"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:weightSum="1" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                    <com.gap.pino.util.CustomTextView
                        android:id="@+id/Question_VT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:inputType="textMultiLine"
                        android:text="@string/label_surveyActivity_questionTitle"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.gap.pino.util.CustomTextView
                        android:id="@+id/count_VT"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:text="@string/label_surveyActivity_rowTitle"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/layout_bottom"
                android:layout_below="@+id/layoutCardView"
                android:layout_marginTop="5dp"
                android:dividerHeight="2dp"
                android:fadeScrollbars="false" />

                <ExpandableListView
                    android:id="@+id/lvExp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/layout_bottom"
                    android:layout_below="@+id/layoutCardView"
                    android:dividerHeight="2dp"
                    android:fadeScrollbars="false"
                    android:visibility="gone" />


                <RelativeLayout
                    android:id="@+id/layout_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/relativeLayout"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:layout_alignParentLeft="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/attach_Icon"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:background="@mipmap/checklist_attachment" />

                        <com.gap.pino.util.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="افزودن تصویر" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical">

                        <Button
                            android:id="@+id/complete_Button"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="11dp"
                            android:layout_marginRight="11dp"
                            android:background="@mipmap/btn_checklist"
                            android:text="@string/label_surveyActivity_complete"
                            android:textColor="@color/white" />

                        <Button
                            android:id="@+id/record_Button"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:background="@mipmap/btn_checklist"
                            android:text="@string/label_surveyActivity_record"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/attachRecyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true" />



            </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>
