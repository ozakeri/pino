<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="5dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:padding="2dp">
            <LinearLayout
                android:id="@+id/container_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">


                    <com.gap.bis_inspection.util.CustomTextView
                        android:id="@+id/txt_drivername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="@string/label_message_dialogAttachFile_title"
                        android:textColor="@color/fav" />

                    <RelativeLayout
                        android:id="@+id/closeIcon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_close" />
                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/mdtp_done_disabled_dark" />

            </LinearLayout>

            <com.gap.bis_inspection.util.CustomTextView
                android:id="@+id/camera_VT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mdtp_button_color"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_margin="15dp"
                android:text="@string/label_message_dialogAttachFile_camera"
                android:drawableRight="@drawable/ic_image"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mdtp_done_disabled_dark"
                android:visibility="gone"/>

            <com.gap.bis_inspection.util.CustomTextView
                android:id="@+id/gallery_VT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mdtp_button_color"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_margin="15dp"
                android:text="@string/label_message_dialogAttachFile_gallery"
                android:drawableRight="@drawable/ic_galleryicon"
                android:visibility="gone"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mdtp_done_disabled_dark"
                android:visibility="gone"/>

            <com.gap.bis_inspection.util.CustomTextView
                android:id="@+id/file_VT"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/mdtp_button_color"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_margin="15dp"
                android:text="@string/label_message_dialogAttachFile_title"
                android:drawableRight="@drawable/ic_file" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mdtp_done_disabled_dark"
                android:visibility="gone"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>