<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.form.SurveyActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutToolbar"
            android:layout_margin="10dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/status_Icon"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical" />

            <com.gap.bis_inspection.util.CustomTextView
                android:id="@+id/locateVisit_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:text="محل بازدید"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.gap.bis_inspection.util.CustomTextView
                android:id="@+id/visitDate_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:text="تاریخ بازدید"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.gap.bis_inspection.util.CustomTextView
                android:id="@+id/plateText_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:text="اتوبوس"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.gap.bis_inspection.util.CustomTextView
                android:id="@+id/count_TV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:layout_weight="0.4"
                android:gravity="center"
                android:text="@string/label_surveyActivity_rowTitle"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
